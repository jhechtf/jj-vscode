{
  "name": "jj-vscode",
  "displayName": "jj-vscode",
  "description": "VSCode support for the Jujutsu SCM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "*",
    "onFileSystem:jj"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "jj.views.branches",
          "name": "Branches",
          "contextualTitle": "Jujutsu",
          "icon": "$(megaphone)",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "jj.views.branches",
        "contents": "You do not have any branches in this project"
      }
    ],
    "menus": {
      "scm/resourceState/context": [
        {
          "command": "jj.gitPush",
          "group": "inline@1"
        }
      ]
    },
    "commands": [
      {
        "command": "jj.refreshBranches",
        "title": "JJ: Refresh Branches",
        "shortTitle": "Refresh JJ Branches"
      },
      {
        "command": "jj.moveToBranch",
        "title": "JJ: Move to Branch"
      },
      {
        "command": "jj.listBranches",
        "title": "JJ: List Branches"
      },
      {
        "command": "jj.gitPush",
        "title": "JJ: Git Push",
        "icon": "$(megaphone)"
      },
      {
        "command": "jj.gitPull",
        "title": "JJ: Git Pull"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "test": "vscode-test",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  }
}
